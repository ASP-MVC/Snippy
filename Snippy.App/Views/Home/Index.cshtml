@model Snippy.App.Models.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

@if (this.TempData.ContainsKey("message"))
{
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        <strong>@this.TempData["message"]</strong>
    </div>
}

<div class="jumbotron">
    <h1 class="text-center">Snippy</h1>
</div>

<div class="row">

    <div class="col-md-5">
        <h2>Latest snippets: </h2>
        @Html.DisplayFor(x => x.Snippets)
    </div>
    <div class="col-md-5">
        <h2>Latest comments: </h2>
        @Html.DisplayFor(x => x.Commnets)
    </div>
    <div class="col-md-2">
        <ul class="list-group">
            <li class="list-group-item active">Best labels</li>
            @Html.DisplayFor(x => x.Labels)
        </ul>
    </div>
</div>