@model Snippy.App.Models.ViewModels.CommentViewModel
@{
    ViewBag.Title = "Delete comment";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this comment?</h3>
<div class="well">
    @Html.DisplayFor(x => x)
</div>
<hr />
@using (Html.BeginForm("Delete", "Comments", FormMethod.Post, new {@class = "form-inline"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.SnippetId)
    @Html.HiddenFor(x => x.Id)
    <input type="submit" class="btn btn-danger" value="Delete"/>
}
<br />
@Html.ActionLink("Cancel", "Details", "Snippets", new {id =Model.SnippetId}, new {@class = "btn btn-default"})